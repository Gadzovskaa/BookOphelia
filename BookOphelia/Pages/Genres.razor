@page "/genres"

<style>
    body {
        background-color: transparent;
    }

    .small-card {
        width: 200px; 
        height: auto; 
        margin: 10px;
        display: inline-block;
    }

    .mud-typography-body2 {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        overflow: hidden;
        -webkit-line-clamp: 4;
        white-space: normal;
    }

    .bold-h5 {
        font-weight: bold;
    }
</style>


